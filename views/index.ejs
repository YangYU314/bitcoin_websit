<!DOCTYPE html>
<html>
<head>
    <title> BITVISION </title>
    <link rel='stylesheet' href='/stylesheets/style-1.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/css-2.css' />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="/javascripts/login.js"></script>

</head>

<body>

<header id="header">
    <div class="inner">
        <a href="index" class="logo"><img src="images/logo.png" width="120"/></a>
        <nav id="nav">
            <a href="home">Home</a>
            <a href="home.ejs">Market</a>
            <a href="person.ejs">Personal</a>
        </nav>
    </div>
</header>


<div class="ui-mask" id="mask" onselectstart="return false"></div>
<div class="ui-dialog" id="dialogMove" onselectstart='return false;'>

    <div class="form-top">
        <div class="form-top-left">
            <h1>Login to our site</h1>
            <h2>Enter your username and password to log on:</h2>
            <a class="ui-dialog-closebutton" href="javascript:hideDialog();"><img src="images/close.png"></a>
        </div>
        <div class="form-top-right">
            <i class="fa fa-lock"></i>
        </div>
    </div>

    <div class="form-bottom">
        <form id="login" role="form" method="post" class="login-form" onsubmit="return false">

            <div class="form-group">
                <h3 class="sr-only" for="username">Username</h3>
                <input type="text" name="username" placeholder="Username" class="username form-control" id="username">
            </div>

            <div class="form-group">
                <h3 class="sr-only" for="form-password">Password</h3>
                <input type="password" name="password" placeholder="Password" class="password form-control" id="password">
            </div>

            <a type="submit" class="button" id="submit">Log in!</a>
            <!--<button type="submit" name="submit" id="submit">Confirm</button>-->
        </form>
    </div>

</div>

<section id="banner">
    <div class="inner">
        <header>
            <a href="index.html" class="logo1">
                <img src="images/logo.png" height="100"/></a>
        </header>
        <footer>
            <a class="button" onclick=showDialog()>Log In</a>
            <a href="register" class="button">Sign up</a>
        </footer>
    </div>
</section>




</body>
</html>
